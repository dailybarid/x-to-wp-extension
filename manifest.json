{
  "manifest_version": 3,
  "name": "Post X to WordPress",
  "version": "1.1",
  "description": "Post any tweet to WordPress with media, tags, and draft mode",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
