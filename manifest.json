{
  "manifest_version": 3,
  "name": "Post X to WordPress",
  "version": "1.1",
  "description": "Post any tweet to WordPress with media, tags, and draft mode",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
